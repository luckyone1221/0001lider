			block
			+e.turn-back-btn
				+icon('angle-left')
				span Вернуться назад
			h1 Проект дома Атлас-10
		+e.house-chars-header.container
			+e.chars-header-content
				span.chars-header-headline Общие характеристики:
				ul.chars-pills-list
					li
						span Общая площадь:
						span 223.5 м2
					li
						span Габариты:
						span 14.4х11.0
					li
						span Материал:
						span Газобетон
					li
						span Стиль:
						span Классика
			+e.build-time-baner
				.iconed-line
					+icon('check-calendar')
